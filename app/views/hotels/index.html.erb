<div class="container">
  
  <p id="notice"><%= notice %></p>
  
  <h1>Hotels</h1>
  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Phone number</th>
        <th>City</th>
        <th>Country code</th>
        <th>Postal code</th>
        <th>State</th>
        <th>Street name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @hotels.each do |hotel| %>
        <tr>
          <td><%= hotel.name %></td>
          <td><%= hotel.description %></td>
          <td><%= hotel.phone_number %></td>
          <td><%= hotel.city %></td>
          <td><%= hotel.country_code %></td>
          <td><%= hotel.postal_code %></td>
          <td><%= hotel.state %></td>
          <td><%= hotel.street_name %></td>
          <td><%= link_to 'Show', hotel %></td>
          <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
          <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Hotel', new_hotel_path %>
  
</div>